<Window x:Class="Frontend.TrooperEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend"
        xmlns:vms="clr-namespace:Frontend.ViewModels"
        mc:Ignorable="d"
        Title="Trooper Editor" Height="350" Width="500">


    <StackPanel x:Name="stack">
        <Label Content="{Binding Actual.Type}" Padding="5"  BorderThickness="2"  Background="LightGray" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="10"/>
        <Label Content="Power" Padding="5" Background="LightBlue" FontSize="10"/>
        <TextBox Text="{Binding Actual.Power, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="Vitality" Padding="5" Background="LightBlue" FontSize="10"/>
        <TextBox Text="{Binding Actual.Vitality, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Label Content="Cost" Padding="5" Background="LightBlue" FontSize="10"/>
        <TextBox Text="{Binding Actual.Cost, UpdateSourceTrigger=Explicit}" Padding="10"/>
        <Button Content="Save" Click="Button_Click" Padding="5"/>
    </StackPanel>
</Window>
